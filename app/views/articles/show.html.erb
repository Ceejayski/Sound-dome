<div class="bg-white text-dark">
  <div class="w-80 mx-auto">
    <h1 class="text-center mb-3"><%= @article.title %></h1>
    <div class="article-page-image mx-auto">
    <%= image_render @article%>
    <div class="d-flex justify-content-between mt-4">
      <p>
        Tags:
        <% @article.categories.each do |tag| %>
          <%= link_to tag.name, category_path(tag) %>
        <% end %>
      </p>
      <div>
        <p>Posted by: <%= @article.user.username %></p>
        <div class="d-flex justify-content-between">
          <p><%= @article.votes.count %> <%= (@article.votes.count) == 1 ? 'vote' : 'votes'%></p>
          <%= vote_btn @article%>
        </div>
      </div>
    </div>
    </div>
    <p class="w-70 mx-auto mt-4 fs-3"><%= @article.body %></p>
    <div class="w-50 mx-auto">
      <%= edit_article @article%>
      <%= link_to 'Back', articles_path, class: "btn btn-light w-100 mt-2 mb-4 mx-auto" %>
    </div>
  </div>
  
</div>