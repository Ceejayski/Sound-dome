<p id="notice"><%= notice %></p>

<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<p>Posted by: <%= @article.user.username %></p>
<p>
  Tags:
  <% @article.categories.each do |tag| %>
    <%= link_to tag.name, category_path(tag) %>
  <% end %>
</p>
<% if !(current_user.nil?) && article_owner? %>    
  <%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<p><%= @article.votes.count %> <%= (@article.votes.count) == 1 ? 'vote' : 'votes'%></p>

<% pre_vote = @article.votes.find { |vote| vote.user_id == current_user.id} %>
<% if pre_vote %>
  <%= button_to 'Unvote', article_vote_path(@article, pre_vote), method: :delete %>
<% else %>
  <%= button_to 'vote', article_votes_path(@article), method: :post %>
<% end %>
<%= link_to 'Back', articles_path %>
