<div class="w-40 mx-auto container form pb-3">
  <%= form_with(model: article) do |form| %>
    <% if article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <% if @article.pic.attached? %>
          <%= image_render @article %><br/>
      <% end %>
    </div>
    <div class="custom-file">
      <%= form.file_field :pic, class: "custom-file-input" %>
      <%= form.label 'Choose file', class: "custom-file-label"%>
    </div>
    <div class="form-group mt-3">
      <%= form.label :title %> <br />
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :body %> <br />
      <%= form.text_area :body, class: "form-control"  %>
    </div>
    <div class="d-flex">
    <% priority_categories().each do |category| %>
      <div class="d-flex checkbox">
        <%= check_box_tag "category[]", category.id %>
        <%= label_tag category.name %>
      </div>
    <% end %>
    </div>

    <div class="actions">
      <%= form.submit 'Create Article', class: 'btn btn-success w-80 mx-auto d-block mt-4' %>
    </div>
  <% end %>
<%= link_to 'Back', articles_path, class: 'btn btn-light w-80 mx-auto d-block mt-4' %>
</div>